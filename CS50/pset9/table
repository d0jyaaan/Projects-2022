CREATE TABLE users
    (id INTEGER,
    username TEXT NOT NULL,
    hash TEXT NOT NULL,
    cash NUMERIC NOT NULL DEFAULT 10000.00,
    PRIMARY KEY(id));
CREATE UNIQUE INDEX username ON users (username);

CREATE TABLE stocks (
id INTEGER NOT NULL,
name TEXT NOT NULL,
person_id INTEGER NOT NULL,
stock TEXT NOT NULL,
value NUMERIC NOT NULL,
price NUMERIC NOT NULL,
total NUMERIC,
PRIMARY KEY(id)
FOREIGN KEY(person_id) REFERENCES users(id)
);

CREATE TABLE transactions (
id INTEGER NOT NULL,
person_id INTEGER NOT NULL,
type TEXT NOT NULL,
name TEXT NOT NULL
stock TEXT NOT NULL,
amount NUMERIC NOT NULL,
price NUMERIC NOT NULL,
time TEXT NOT NULL,
PRIMARY KEY(id)
FOREIGN KEY(person_id) REFERENCES users(id)
);
